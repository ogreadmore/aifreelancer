  <script>
    // Minimal FAQ accordion behavior (from About page pattern)
    document.addEventListener('DOMContentLoaded', function () {
      const toggles = Array.from(document.querySelectorAll('.faq-toggle'));
      toggles.forEach((btn, i) => {
        const item = btn.closest('.faq-item');
        const panel = item.querySelector('.faq-panel');
        btn.setAttribute('aria-expanded', 'false');
        btn.setAttribute('aria-controls', 'faq-panel-' + i);
        panel.setAttribute('id', 'faq-panel-' + i);
        panel.setAttribute('aria-hidden', 'true');
        panel.style.display = 'none';
        btn.addEventListener('click', () => {
          const isOpen = item.classList.contains('open');
          document.querySelectorAll('.faq-item.open').forEach(openItem => {
            openItem.classList.remove('open');
            const p = openItem.querySelector('.faq-panel');
            const b = openItem.querySelector('.faq-toggle');
            if (p){ p.style.display = 'none'; p.setAttribute('aria-hidden','true'); }
            if (b){ b.setAttribute('aria-expanded','false'); }
          });
          if (!isOpen){
            item.classList.add('open');
            panel.style.display = 'block';
            panel.setAttribute('aria-hidden','false');
            btn.setAttribute('aria-expanded','true');
          }
        });
      });
    });
  </script>
